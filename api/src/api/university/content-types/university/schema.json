{
  "kind": "collectionType",
  "collectionName": "universities",
  "info": {
    "singularName": "university",
    "pluralName": "universities",
    "displayName": "University",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "universityProfile": {
      "type": "component",
      "repeatable": false,
      "component": "blocks.profiles",
      "required": true
    },
    "cta": {
      "type": "component",
      "repeatable": false,
      "component": "blocks.cta",
      "required": false
    },
    "overview": {
      "type": "component",
      "repeatable": false,
      "component": "shared.header",
      "required": true
    },
    "whythisUniversity": {
      "type": "component",
      "repeatable": false,
      "component": "blocks.why-us"
    },
    "rankComparison": {
      "type": "component",
      "repeatable": false,
      "component": "blocks.rank-comparison"
    },
    "eligibilityCriteria": {
      "type": "component",
      "repeatable": false,
      "component": "blocks.eligibility-card"
    },
    "documentRequired": {
      "type": "component",
      "repeatable": false,
      "component": "blocks.popular-courses"
    },
    "feesStructure": {
      "type": "component",
      "repeatable": false,
      "component": "blocks.eligibility-table"
    },
    "faq": {
      "type": "component",
      "repeatable": false,
      "component": "blocks.faq"
    },
    "countries": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::country.country",
      "mappedBy": "university"
    },
    "noOfStudentsStudying": {
      "type": "string"
    }
  }
